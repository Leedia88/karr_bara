<!-- Modal -->
<div class="modal fade" id="ModalForm<%=order_meal.id%>" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editModalLabel">Choix du burger</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="m-3">
          <%= form_with model: order_meal, url: url, method: method, local: true do |form| %>
            <div>Formule :</div>
            <div class="buttons">
              <%= form.collection_radio_buttons :menu_id, menus, :id, :name , {:checked => order_meal.menu_id} do |b|
         b.radio_button(class: "buttons", :label => b.text) 
       end %>
            </div>
            <div>Recette :</div>
            <div class="buttons">
              <%= form.collection_radio_buttons :recipe_id, recipes, :id, :name , {:checked => order_meal.recipe_id} do |b|
         b.radio_button(class: "buttons", :label => b.text) 
       end %>
            </div>
            <div>Steak :</div>
            <div class="buttons">
              <%= form.collection_radio_buttons :cooking_id, cookings, :id, :name , {:checked => order_meal.cooking_id} do |b|
         b.radio_button(class: "buttons", :label => b.text) 
       end %>
            </div>
            <div><em>* Steak Veggie avec charcuterie selon le burger </em></div>
            <div>Boisson :</div>
            <div class="buttons">
              <%= form.collection_radio_buttons :drink_id, drinks, :id, :name , {:checked => order_meal.drink_id} do |b|
         b.radio_button(class: "buttons", :label => b.text) 
       end %>
            </div>
            <div><em>* Nombre limité</em></div>
            <div>Dessert du jour :</div>
            <div class="buttons">
              <%= form.collection_radio_buttons :dessert, [["Non", false],["Oui", true]], :last, :first, {:checked => order_meal.dessert} do |b|
       b.radio_button(class: "buttons", :label => b.text) 
       end %> </div>
            <div>Demande particulière * :</div>
            <div class="buttons">
              <%=form.text_field :option%>
            </div>
            <div><em>* Si approbation du chef!</em></div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Retour</button>
          <%= form.submit "Valider", :class => "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>