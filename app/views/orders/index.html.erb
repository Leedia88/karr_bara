
<div class="text-center">
<p>Nombre de burgers restants : <%=@total_available%></p>
</div>
<div class="container py-5">
  <div class="row">
    <div class="col-md-12">
      <div id="content">
        <ul class="timeline-1 text-black">
          <% @schedules.each do |schedule| %>
            <li class="event" data-date="<%=schedule.slot%>">
              <h4><%if schedule.available !=0%> Reste : <%=schedule.available%> <%end%></h4>
              <p><%if schedule.orders.empty?%> Pas de commande 
                <%else%>
                  <%schedule.orders.each do |order|%>
                    <%=order.user%> : <%=order.quantity%>
                      <%order.order_meals.each do |meal|%>
                      <div><%=meal.steno%></div>
                      <%end%>
                    <%=link_to "Voir la commande", order_path(order)%>
                    <%end%>
                <%end%></p>
            </li>
          <%end%>
        </ul>
      </div>
    </div>
  </div>
</div>
