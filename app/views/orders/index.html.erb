<h1>Orders#index</h1>
<p>Find me in app/views/orders/index.html.erb</p>
<p>Nombre de burgers restants : <%=@total_available%></p>
<div class="container py-5">
  <div class="row">
    <div class="col-md-12">
      <div id="content">
        <ul class="timeline-1 text-black">
          <% @schedules.each do |schedule| %>
            <li class="event" data-date="<%=schedule.slot%>">
              <p><%if schedule.available !=0%> Encore dispos : <%=schedule.available%> <%end%></p>
              <p><%if schedule.orders.empty?%> Pas de commande 
                <%else%>
                  <%schedule.orders.each do |order|%>
                    <%=order.user%> : <%=order.quantity%>
                    <%=link_to "Voir la commande", order_path(order)%>
                    <%end%>
                <%end%></p>
            </li>
          <%end%>
        </ul>
      </div>
    </div>
  </div>
</div>
