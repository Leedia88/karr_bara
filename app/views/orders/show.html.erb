<h1>Orders#show</h1>
<p>Find me in app/views/orders/show.html.erb</p>
<br>
<div class="container choose-schedule">
  <div class="row">
    <div class="col-md-12 col-md-offset-4">
      <div class=" panel-default">
        <div class="panel-body">
          <div class="text-center">
            <span class="fa-stack fa-3x">
              <i class="fas fa-circle fa-stack-2x text-primary"></i>
              <i class="fas fa-check fa-stack-1x fa-inverse"></i>
            </span>
            <h2 class="text-center">Réservation confirmée</h2>
            <div>Prénom : <%= @order.user %> </div>
            <div>Horaire : <%=@order.schedule.slot%> </div>
            <div>Quantité : <%=@order.quantity%>  burger.s</div>
            <div class="mt-3">
              <%=link_to 'Choisir le.s burger.s', order_order_meals_path(@order.id), :class => "btn btn-info"%>
            </div>
            <div class="mt-3">
              <%=link_to 'Annuler la réservation', order_path(@order.id), method: :delete,  :class => "btn btn-outline-danger"%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
